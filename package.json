{
  "name": "weather",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "npm-run-all -p sass start-react",
    "build": "npm run build-css && react-scripts build",
    "sassy": "node-sass --watch --include-path ./src/styles/scss --include-path ./node_modules src/ -o /styles/css",
    "sass": "node-sass --watch src/styles/scss -o  src/styles/css",
    "build-css": "node-sass --watch src/styles/scss:src/styles/css  --style compressed"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5"
  }
}